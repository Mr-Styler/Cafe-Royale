<%- include ('../partials/header') %>

    <title>Settings</title>
</head>
<body>

    <%- include ('../partials/nav') %>

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3">
                <div class="">
                    <h1 class="mt-3 text-center">Settings</h1>
                    <ul class="nav nav-pills flex-column mt-3 text-center">
                        <li class="nav-item">
                            <a class="nav-link btn-gold active" data-bs-toggle="pill" href="#personalInfo">Personal Information</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn-gold" data-bs-toggle="pill" href="#acctSettings">Account Settings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn-gold" data-bs-toggle="pill" href="#changePwd">Change Password</a>
                        </li>
                    </ul>   
                </div>
                
            </div>
            <div class="col-lg-9">
                <div class="mt-3">
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane container active" id="personalInfo">
                            <h2>Edit personal information</h2>

                            <form action="/update-me" enctype="multipart/form-data" method="post">
                                <div class="row mt-3">
                                    <div class="col mb-3">
                                        <label for="username" class="form-label">Username</label>
                                        <input type="text" id="username" name="username" class="form-control settings-input" value="<%= currentUser.username %>">
                                    </div>
                                    <div class="col mb-3">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="email" id="email" name="email" class="form-control settings-input" value="<%= currentUser.email%>">
                                    </div>    
                                </div>
                                
                                <div class="mb-3">
                                    <label for="profile-pic" class="form-label">Change Picture</label>
                                    <input type="file" accept="image/*" id="profile-pic" name="image" class="form-control btn-gold">
                                </div>
                                <button type="submit" class="btn btn-gold">Save changes</button>
                            </form>
                        </div>
                        <div class="tab-pane container fade" id="acctSettings">
                            <h2>Edit accout</h2>
                        </div>
                        <div class="tab-pane container fade" id="changePwd">
                            <h2>Change password</h2>

                            <form action="/change-pwd" method="post">
                                <div class="col mt-3 mb-3">
                                    <label for="current-pwd" class="form-label">Current Password</label>
                                    <input type="password" id="current-pwd" name="current-pwd" class="form-control settings-input">
                                </div>
                                <div class="row">
                                    <div class="col mb-3">
                                        <label for="new-pwd" class="form-label">New Password</label>
                                        <input type="password" id="new-pwd" name="new-pwd" class="form-control settings-input">
                                    </div>
                                    <div class="col mb-3">
                                        <label for="confirm-pwd" class="form-label">Rewrite Password</label>
                                        <input type="password" id="confirm-pwd" name="confirm-pwd" class="form-control settings-input">
                                    </div>
                                </div>
                                <a href="/forgot-pwd" class="form-control mb-3">Forgot Password?</a>
                                <button type="submit" class="btn btn-gold">Update Password</button>
                            </form>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>

        
          
          
    </div>
          
    <%- include ('../partials/footer') %>
    <%- include ('../partials/end') %>

    <script src="../js/forms.js"></script>